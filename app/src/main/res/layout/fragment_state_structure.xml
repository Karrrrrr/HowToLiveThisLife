<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3"
    tools:context=".HomeProblems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B1DB68"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="sans-serif-black"
            android:onClick="paperLeft"
            android:text="ела"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif-black"
            android:text="Государственные структуры"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="35dp"
            android:fontFamily="sans-serif-black"
            android:onClick="housingRight"
            android:text="Жи"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="mfc"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/mfcPlus"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="МФЦ"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:id="@+id/mfcLayout"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что там можно сделать"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что же скрывается за этим страшным названием и зачем нужно."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:onClick="article"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Оформление документов"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Какие бумажки нужны, если вы собираетесь получать новые бумажки."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Социальные пособия"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Помощь в оформлении материальной помощи."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Смена места жительства"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Переезжаете? Расскажем о необходимых документах."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="hcsEtc"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/hcsEtcPlus"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ЖКХ и прочие домовые службы"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/hcsEtcLayout"
                android:visibility="invisible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="В каких случаях нужно ехать в ЖКХ"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Кто в здравом уме захочет туда ехать? Поэтому мы расскажем, когда надо."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Домовые службы"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ЖКХ - не единственная домовая служба. В этой статье расскажем, какие бывают ещё."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Бумажки"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Какие документы на недвижимость бывают и что с ними делать."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Экстренные ситуации"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Куда обращаться, если неожиданно отключили воду или свет."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="hospital"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/hospitalPlus"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Поликлиники и больницы"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:id="@+id/hospitalLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Общие правила выживания в больницах"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как вести себя, если жизнь вынудила вас посетить мед учреждение."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Стационар"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Расскажем что делать, если вас положили в больницу."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Лекарства"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Подскажем средства от лёгких недомоганий без рецепта врача."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Больничный"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что делать, если заболел. Куда обращаться и как выбить себе больничный."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="registry"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/registryPlus"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ЗАГС"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:id="@+id/registryLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что такое ЗАГС"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="В ЗАГСе можно не только жениться. Расскажем, что можно ещё."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Зачем ходить в ЗАГС"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что должно случиться в вашей жизни, чтобы пойти в ЗАГС."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Свадьба"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Научим тебя и твою половинку самостоятельной жизни."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Свидетельство о смерти"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Соболезную тебе. И помогу в этой нелёгкой ситуации с документами."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>