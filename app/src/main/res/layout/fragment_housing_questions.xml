<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3"
    tools:context=".HomeProblems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B1DB68"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="sans-serif-black"
            android:onClick="stateLeft"
            android:text="уры"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="70dp"
            android:fontFamily="sans-serif-black"
            android:text="Жилищные вопросы"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="63dp"
            android:fontFamily="sans-serif-black"
            android:onClick="work"
            android:text="Как"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="rent"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/rentPlus"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Съём жилья"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:id="@+id/rentLayout"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Где найти квартиру"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Расскажем о популярных сервисах поиска съёмного жилья."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как не попасть на деньги"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Собрали для вас самые популярные схемы мошенничества."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Правила жизни на съёмной квартире"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что можно и что нельзя делать в чужой квартире."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Документы для съёма"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Какие бумажки вам пригодятся для съёма жилья и зачем."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="estate"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/estatePlus"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Собственная недвижимость"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/estateLayout"
                android:visibility="invisible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:onClick="article"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Где и как купить квартиру"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Популярные сервисы для покупки недвижимости и подводные камни."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Риэлторы"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Кто такие эти ваши риэлторы и нужен ли вам такой человек."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Трудный выбор"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="В пользу чего сделать выбор при покупке квартиры."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Свой дом"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Каково это - иметь свой собственный отдельный дом."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="pay"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/payPlus"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Оплата за жильё"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:id="@+id/payLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="За что нужно платить"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Какие бывают оплаты за жильё, сколько всё это стоит и как платить."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:onClick="article"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Экономим на элементарном"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Не забывайте выключать свет, закрывайте кран, пока чистите зубы и так далее."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сервисы для оплаты"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как экономить своё время и нервы при оплате счетов."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Возвращение налога"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="А вы знали, что можете вернуть часть своих денег после оплаты налогов?"
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="dormitory"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/dormitoryPlus"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Общежития и коммунальные квартиры"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:id="@+id/dormitoryLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Немного о коммуналках"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что это такое и чем отличается от общаги и обычной квартиры."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Обустройство жизни в общаге"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как не превратить свою комнату в тараканье царство."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Где найти жильё подешевле"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Расскажем, как заселиться в коммуналку или общежитие."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Правила выживания"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что можно и что нельзя делать, живя в коммунальной квартире."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>