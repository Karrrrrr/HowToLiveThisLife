<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99C155"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:onClick="back"
            android:layout_marginBottom="20dp"
            android:background="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textAlignment="center"
                android:text="Меню"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="120dp"
                android:textColor="@color/white"
                android:textSize="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6A6A6A"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:onClick="house"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="Бытовые проблемы"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/borders"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6A6A6A"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:onClick="paper"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="Бумажные проблемы"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/borders"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6A6A6A"
            android:fontFamily="sans-serif-black"
            android:onClick="state"
            android:textSize="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="Государственные структуры"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/borders"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6A6A6A"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:onClick="housing"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="Жилищные вопросы"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/borders"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6A6A6A"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:onClick="work"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="Как работать"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/borders"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6A6A6A"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:onClick="search"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="Поиск"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/borders"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6A6A6A"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:onClick="info"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="Информация о разработчике"/>
    </LinearLayout>

</LinearLayout>