<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/home"
    android:background="#F3F3F3"
    tools:context=".HomeProblems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B1DB68"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="100dp"
            android:fontFamily="sans-serif-black"
            android:text="Бытовые проблемы"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="70dp"
            android:fontFamily="sans-serif-black"
            android:onClick="paperRight"
            android:text="Бум"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="kitchen"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/kitchenPlus"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Кухня"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:id="@+id/kitchenLayout"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Элементарная кулинария"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Готовим самые простые блюда: макароны, яйца, пельмени."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как приручить плиту"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Советы по использованию духовки, газовых и электроплит."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Варить до готовности и солить по вкусу"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как готовить по рецептам из интернета и не умереть от отравления."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Её величество посудомойка"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что такое посудомоечная машина и как её правильно использовать."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="bath"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/bathPlus"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ванная"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/bathLayout"
                android:visibility="invisible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Большая стирка"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как и чем стирать свою одежду, чтобы она не села и не окрасилась в серобурмалиновый."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Гигиена и почему она так важна"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Элементарный уход за собой и своим внешним видом."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Утюг"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как погладить свою одежду и не сжечь весь дом."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:onClick="article"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Белый трон и как за ним ухаживать"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Взрослая жизнь жестока, приходится уделять внимание даже унитазу."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="cleaning"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/cleaningPlus"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Уборка"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:id="@+id/cleaningLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Пылесос и влажная уборка"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сохраняем дом в чистоте, чтобы не задохнуться под слоем грязи."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Бытовая химия"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сколько должно быть бутылочек с химозной жижей на вашей полке."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Мусорка"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Учимся организовывать регулярный сбор и выброс мусора."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как заставить себя убраться"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 действенных способов заставить себя заняться домашними делами."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="pets"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/petsPlus"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Домашние животные"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:id="@+id/petsLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Собаки"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Милые преданные шабаки, как за ними ухаживать и уживаться вместе."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Коты"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как смириться, что теперь не ты в доме главный."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Птицы"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Чем кормить летающих существ и где им лучше жить."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Грызуны"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Моральная подготовка к скорой кончине вашего любимца."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>