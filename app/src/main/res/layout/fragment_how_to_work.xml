<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3"
    tools:context=".HomeProblems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B1DB68"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="sans-serif-black"
            android:onClick="housingLeft"
            android:text="осы"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="100dp"
            android:fontFamily="sans-serif-black"
            android:text="Как работать"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="resume"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/resumePlus"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Резюме"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:id="@+id/resumeLayout"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что такое резюме"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Расскажем, для чего нужно резюме и из чего оно состоит."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как составить резюме"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Хитрости составления резюме, чтобы точно взяли на работу."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Платформы поиска работы"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Где разместить своё резюме, чтобы работодатель вас нашёл."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как не надо"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Предостережём вас от составления некачественного резюме."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="interview"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/interviewPlus"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Собеседование"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/interviewLayout"
                android:visibility="invisible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как попасть на собеседование"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Расскажем, как привлечь работодателя, чтобы он пригласил вас к себе."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что будет на собеседовании"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как проходит собеседование, что вас будут спрашивать."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Правила успешного собеседования"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Расскажем, как расположить работодателя к себе."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Почему вы решили устроиться к нам?"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как правильно ответить на каверзные вопросы hr-ов."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="paws"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/pawsPlus"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Что делать, если у тебя лапки"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:id="@+id/pawsLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Мотивация для работы"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сборник мотивирующих цитат для поиска работы и её выполнения."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Профессии"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Куда устроиться, если ничего не умеешь? Где берут без опыта?"
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как заработать денег"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Кушать хочется, а работать - нет? Поможем решить диллему."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Самые лёгкие профессии"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Поможем найти работу даже самым ленивым."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:onClick="salary"
                android:background="#D4EDA8">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/salaryPlus"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Заработная плата"
                    android:fontFamily="sans-serif-black"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6A6A6A"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/borders"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:id="@+id/salaryLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:onClick="article"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Средняя з/п"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сколько потребовать у работодателя, чтобы не остаться обделённым."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Налоги"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Чем отличается белая зарплата от серой, на руки и за вычетом."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:onClick="article"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Прожиточный минимум"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как мало может вам платить ваш работодатель."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:onClick="article"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Карьерная лестница"
                        android:fontFamily="sans-serif-black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#6A6A6A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что нужно, чтобы повысить свою заработную плату."
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="40dp"
                        android:textColor="#6A6A6A"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>